<h1><%= link_to "Lexi", root_path %></h1>

<div class="block" id="block-signup">
	<h2>Sign Up</h2>
	<div class="content signup">
		 <div class="flash">
        <% flash.each do |type, message| -%>
          <div class="message <%= type %>">
            <p><%= message %></p>
          </div>
        <% end -%>
      </div>
				
			<%= form_for(:user, :url => users_path, :html => { :class => "form login"}) do |f| %>
			<div class="group wat-cf">
				<div class="left">
	    		<%= f.label :name, :class => "label right" %>
				</div>
				<div class="right">
	    		<%= f.text_field :name, :class => "text_field" %>
				</div>
			</div>
			<div class="group wat-cf">
				<div class="left">
	    		<%= f.label :email, :class => "label right" %>
				</div>
				<div class="right">
	    		<%= f.text_field :email, :class => "text_field" %>
				</div>
			</div>
			<div class="group wat-cf">
				<div class="left">
	    		<%= f.label :password, :class => "label right" %>
				</div>
				<div class="right">
	    		<%= f.password_field :password, :class => "text_field" %>
				</div>
			</div>
			<div class="group wat-cf">
				<div class="left">
	    		<%= f.label :password_confirmation, :class => "label right" %>
				</div>
				<div class="right">
	    		<%= f.password_field :password_confirmation, :class => "text_field" %>
				</div>
			</div>
			
			<div class="group navform wat-cf">
				<div class="right">
					<button class="button" type="submit">
			 			<img src="images/web-app-theme/icons/tick.png" alt="Save"> Sign Up
			  	</button>
				</div>
			</div>
			
			
			<% end %>
	</div>
</div>


<p>Already a User? <%= link_to "Login now!", signin_path %></p>